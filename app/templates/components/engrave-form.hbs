<div class="row">
  <div class="col-md">
    <form>
      <div class="form-group">
        <label for="lilypondScript">Lilypond script:</label>
        {{textarea class="form-control" id="lilypondScript" rows=28 autofocus=True required=True value=score.script}}
      </div>
    </form>
  </div>

  <div class="col-md">
    <button type="submit" class="btn btn-primary btn-sm" onclick={{action 'engrave'}}>Engrave (Ctrl-S)</button><span id="progressText">{{progressText}}</span>
    <p id="errorText">{{errorText}}</p>
    <img src="{{imageUrl}}" style="max-width: 100%">
  </div>
</div>